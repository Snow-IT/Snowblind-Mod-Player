<Page x:Class="SnowblindModPlayer.Pages.SettingsPage" PreviewMouseWheel="OnPreviewMouseWheel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <ScrollViewer x:Name="SettingsScroll" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly" PreviewMouseWheel="OnPreviewMouseWheel">
        <StackPanel Margin="18">
            <ui:Card>
                <StackPanel Margin="14">
                    <TextBlock FontSize="18" FontWeight="SemiBold" Text="Settings (Placeholder)"/>
                    <TextBlock Opacity="0.75" Text="C + D sind umgesetzt. Settings werden als nächstes wieder vollständig aufgebaut."/>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
</Page>
