<Page x:Class="SnowblindModPlayer.Pages.LogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Logs">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: file list + actions -->
        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                <Button x:Name="RefreshBtn" Width="80" Click="RefreshBtn_Click" Margin="0,0,6,0">Refresh</Button>
                <Button x:Name="DeleteBtn" Width="80" Click="DeleteBtn_Click" Margin="0,0,6,0">L&#x00F6;schen</Button>
                <Button x:Name="OpenFolderBtn" Width="100" Click="OpenFolderBtn_Click">Ordner &#x00F6;ffnen</Button>
            </StackPanel>

            <ListBox x:Name="LogList" DockPanel.Dock="Bottom" HorizontalContentAlignment="Stretch"
                     SelectionChanged="LogList_SelectionChanged"
                     DisplayMemberPath="Name"/>
        </DockPanel>

        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch"/>

        <!-- Right: content viewer -->
        <Border Grid.Column="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="6">
            <TextBox x:Name="LogContent" FontFamily="Consolas" FontSize="12"
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     TextWrapping="NoWrap" AcceptsReturn="True" IsReadOnly="True"/>
        </Border>
    </Grid>
</Page>