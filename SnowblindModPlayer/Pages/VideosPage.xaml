<Page x:Class="SnowblindModPlayer.Pages.VideosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button x:Name="AddBtn" Content="+ Hinzufügen" Width="120" Margin="0,0,8,0"/>
                <Button x:Name="RemoveBtn" Content="Entfernen" Width="120" Margin="0,0,8,0"/>
                <Button x:Name="SetDefaultBtn" Content="Als Default" Width="120"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <TextBlock VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8" Text="Ansicht"/>
                <ComboBox x:Name="ViewModeCombo" Width="160">
                    <ComboBoxItem Content="Liste" IsSelected="True" />
                    <ComboBoxItem Content="Miniaturen" />
                </ComboBox>
            </StackPanel>
        </DockPanel>

        <!-- LIST VIEW -->
        <ListView x:Name="ListView" Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Default" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsEnabled="False" IsChecked="{Binding IsDefault}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding DisplayName}" Width="320"/>
                    <GridViewColumn Header="Importiert" DisplayMemberBinding="{Binding ImportedAt}" Width="180"/>
                    <GridViewColumn Header="Datei" DisplayMemberBinding="{Binding FileName}" Width="220"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- THUMB VIEW -->
        <ListBox x:Name="ThumbList" Grid.Row="1" ItemsSource="{Binding Items}" Visibility="Collapsed" SelectionMode="Single">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="6" Padding="8" CornerRadius="10" BorderThickness="1" BorderBrush="#33FFFFFF" Background="#11000000">
                        <StackPanel Width="200">
                            <Border Height="110" Background="#22000000" CornerRadius="8">
                                <Image Source="{Binding ThumbnailPath}" Stretch="UniformToFill" />
                            </Border>
                            <DockPanel Margin="0,8,0,0">
                                <TextBlock DockPanel.Dock="Left" Text="{Binding DisplayName}" TextWrapping="Wrap" Width="160"/>
                                <TextBlock DockPanel.Dock="Right" Text="★" Opacity="{Binding DefaultStarOpacity}" FontSize="16"/>
                            </DockPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Page>
