<Page x:Class="SnowblindModPlayer.Pages.VideosPage" PreviewMouseWheel="OnPreviewMouseWheel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Page.Resources>
        <!-- Styles unverändert -->
    </Page.Resources>

    <Grid Margin="18">
        <!-- Single content area - Toolbar entfernt, Top-Buttons liegen nun im MainWindow -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- List-Ansicht (sichtbar je nach Mode) -->
        <ListView x:Name="ListView" ItemsSource="{Binding Items}" SelectionMode="Single" Visibility="Collapsed"
                  Background="Transparent" BorderThickness="0" Padding="8"
                  ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.CanContentScroll="False">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="6"/>
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="Bd" CornerRadius="8" Background="{TemplateBinding Background}">
                                    <ContentPresenter Margin="4"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#332B6FFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" CornerRadius="8" Background="#FF1F1F1F" Height="70" Width="110" ClipToBounds="True">
                            <Image Source="{Binding ThumbnailPath}" Stretch="UniformToFill"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="14" Foreground="#F2F2F2" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding Duration}" Foreground="#888" FontSize="12"/>
                            <TextBlock Text="{Binding StoredPath}" Foreground="#666" FontSize="11" TextTrimming="CharacterEllipsis" MaxHeight="34"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Thumb-Ansicht: ListBox mit internem ScrollViewer + WrapPanel Horizontal -->
        <ListBox x:Name="ThumbList" ItemsSource="{Binding Items}" SelectionMode="Single"
                 Background="Transparent" BorderThickness="0"
                 Padding="12,0,24,12"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.CanContentScroll="False"
                 PreviewMouseWheel="OnPreviewMouseWheel">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- Explorer-like: füllt Zeile von links nach rechts, wrappt nach unten -->
                    <WrapPanel Orientation="Horizontal" ItemWidth="240" ItemHeight="220" Margin="0" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- Kachelbreite entspricht ItemWidth -->
                    <Border Margin="6" Padding="8" CornerRadius="10" BorderThickness="1" BorderBrush="#33FFFFFF" Background="#11000000" Width="240" Height="220" SnapsToDevicePixels="True">
                        <DockPanel LastChildFill="True">
                            <Border Height="140" Background="#22000000" CornerRadius="8" DockPanel.Dock="Top" ClipToBounds="True">
                                <!-- UniformToFill entspricht üblichen Explorer‑Thumbnails -->
                                <Image Source="{Binding ThumbnailPath}" Stretch="UniformToFill" />
                            </Border>

                            <StackPanel Margin="0,8,0,0">
                                <TextBlock Text="{Binding DisplayName}" TextWrapping="Wrap" Foreground="#F2F2F2" FontWeight="SemiBold" MaxHeight="36" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Duration}" Foreground="#AAA" FontSize="12" Margin="0,4,0,0"/>
                            </StackPanel>

                            <TextBlock Text="★" Opacity="{Binding DefaultStarOpacity}" FontSize="16" Foreground="#FF4CA6FF"
                                       VerticalAlignment="Top" HorizontalAlignment="Right" Margin="4" />
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Page>
