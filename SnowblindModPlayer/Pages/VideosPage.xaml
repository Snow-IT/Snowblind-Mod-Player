<Page x:Class="SnowblindModPlayer.Pages.VideosPage" PreviewMouseWheel="OnPreviewMouseWheel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Page.Resources>
        <!-- Styles unverändert -->
    </Page.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar: Namen müssen mit dem Code-Behind übereinstimmen -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button x:Name="AddBtn" Content="+ Hinzufügen" Width="120" Margin="0,0,8,0"/>
                <Button x:Name="RemoveBtn" Content="Entfernen" Width="120" Margin="0,0,8,0"/>
                <Button x:Name="SetDefaultBtn" Content="Als Default" Width="120"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <TextBlock VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8" Text="Ansicht"/>
                <ComboBox x:Name="ViewModeCombo" Width="160">
                    <ComboBoxItem Content="Liste" />
                    <ComboBoxItem Content="Miniaturen" IsSelected="True" />
                </ComboBox>
            </StackPanel>
        </DockPanel>

        <ListView x:Name="ListView" Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="Single" Visibility="Collapsed">
            <!-- List-Ansicht unverändert -->
        </ListView>

        <!-- Thumb-Ansicht: ListBox übernimmt ScrollViewer; kein externes ScrollViewer verwenden -->
        <ListBox x:Name="ThumbList" Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="Single"
                 Background="Transparent" BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 PreviewMouseWheel="OnPreviewMouseWheel">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- Orientation="Vertical" + ItemWidth erzeugt Kachel-Layout (mehrere Spalten) -->
                    <WrapPanel Orientation="Vertical" ItemWidth="220" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="6" Padding="8" CornerRadius="10" BorderThickness="1" BorderBrush="#33FFFFFF" Background="#11000000" Width="220">
                        <DockPanel LastChildFill="True">
                            <Border Height="125" Background="#22000000" CornerRadius="8" DockPanel.Dock="Top">
                                <Image Source="{Binding ThumbnailPath}" Stretch="Uniform" />
                            </Border>
                            <StackPanel Margin="0,8,0,0">
                                <TextBlock Text="{Binding DisplayName}" TextWrapping="Wrap" Foreground="#F2F2F2"/>
                            </StackPanel>
                            <TextBlock Text="★" Opacity="{Binding DefaultStarOpacity}" FontSize="16" Foreground="#FF4CA6FF"
                                       VerticalAlignment="Top" HorizontalAlignment="Right" Margin="4" />
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Page>
