<Page x:Class="SnowblindModPlayer.Pages.VideosPage" PreviewMouseWheel="OnPreviewMouseWheel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Page.Resources>
        <Style TargetType="ListView">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#F2F2F2"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalOnly"/>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#F2F2F2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F2F2F2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2B2B2B"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#334CA6FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button x:Name="AddBtn" Content="+ Hinzufügen" Width="120" Margin="0,0,8,0"/>
                <Button x:Name="RemoveBtn" Content="Entfernen" Width="120" Margin="0,0,8,0"/>
                <Button x:Name="SetDefaultBtn" Content="Als Default" Width="120"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <TextBlock VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8" Text="Ansicht"/>
                <ComboBox x:Name="ViewModeCombo" Width="160">
                    <ComboBoxItem Content="Liste" />
                    <ComboBoxItem Content="Miniaturen" IsSelected="True" />
                </ComboBox>
            </StackPanel>
        </DockPanel>

        <ListView x:Name="ListView" Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="Single" Visibility="Collapsed">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="" Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="★" FontSize="16" HorizontalAlignment="Center" Opacity="{Binding DefaultStarOpacity}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding DisplayName}" Width="360"/>
                    <GridViewColumn Header="Importiert" DisplayMemberBinding="{Binding ImportedAt}" Width="200"/>
                    <GridViewColumn Header="Datei" DisplayMemberBinding="{Binding FileName}" Width="260"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- C: named ScrollViewer + PreviewMouseWheel to ensure trackpad scrolling anywhere -->
        <ScrollViewer x:Name="ThumbScroll" Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      PanningMode="VerticalOnly"
                      PreviewMouseWheel="OnPreviewMouseWheel">
            <ListBox x:Name="ThumbList" ItemsSource="{Binding Items}" SelectionMode="Single" Background="Transparent" BorderThickness="0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- Vertikale Orientierung: Elemente füllen Spalten von oben nach unten,
                             ScrollViewer sorgt für vertikales Scrollen (wie Ordneransicht) -->
                        <WrapPanel Orientation="Vertical" ItemWidth="220" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="6" Padding="8" CornerRadius="10" BorderThickness="1" BorderBrush="#33FFFFFF" Background="#11000000">
                            <StackPanel Width="220">
                                <Border Height="125" Background="#22000000" CornerRadius="8">
                                    <Image Source="{Binding ThumbnailPath}" Stretch="UniformToFill" />
                                </Border>
                                <DockPanel Margin="0,8,0,0">
                                    <TextBlock DockPanel.Dock="Left" Text="{Binding DisplayName}" TextWrapping="Wrap" Width="175" Foreground="#F2F2F2"/>
                                    <TextBlock DockPanel.Dock="Right" Text="★" Opacity="{Binding DefaultStarOpacity}" FontSize="16" Foreground="#FF4CA6FF" />
                                </DockPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

    </Grid>
</Page>
