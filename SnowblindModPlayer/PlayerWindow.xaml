<Window x:Class="SnowblindModPlayer.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True"
        ShowInTaskbar="False" Background="Black" AllowsTransparency="False"
        KeyDown="Window_KeyDown" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Focusable="True">
    <Grid>
        <vlc:VideoView x:Name="VideoView" />
        <Border VerticalAlignment="Bottom" Background="#66000000" Padding="10" Margin="16" CornerRadius="8" HorizontalAlignment="Left">
            <TextBlock Foreground="White" Opacity="0.85" Text="Space: Pause | ESC: Exit fullscreen / Stop | F11: Toggle fullscreen"/>
        </Border>
    </Grid>
</Window>
