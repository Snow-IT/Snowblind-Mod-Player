<ui:FluentWindow x:Class="SnowblindModPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pages="clr-namespace:SnowblindModPlayer.Pages"
        mc:Ignorable="d"
        Title="Snowblind-Mod Player" Height="740" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- A: Title bar buttons -->
        <ui:TitleBar x:Name="AppTitleBar" Grid.Row="0" Title="Snowblind-Mod Player"
                     ShowMinimize="True" ShowMaximize="True" ShowClose="True" ShowHelp="False" />

        <ui:NavigationView x:Name="Nav" Grid.Row="1" PaneDisplayMode="Left" IsPaneOpen="True" OpenPaneLength="220"
                           Loaded="Nav_Loaded" IsBackButtonVisible="Collapsed">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Videos" Icon="{ui:SymbolIcon Video24}" TargetPageType="{x:Type pages:VideosPage}" />
                <ui:NavigationViewItem Content="Logs" Icon="{ui:SymbolIcon Document24}" TargetPageType="{x:Type pages:LogsPage}" />
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Settings" Icon="{ui:SymbolIcon Settings24}" TargetPageType="{x:Type pages:SettingsPage}" />
            </ui:NavigationView.FooterMenuItems>

        </ui:NavigationView>

        <!-- B: Modern dialogs host -->
        <ContentPresenter x:Name="RootDialogHost" Grid.RowSpan="2"/>

        <ui:InfoBar x:Name="HintBar" Grid.RowSpan="2" VerticalAlignment="Top" Margin="16"
                   Severity="Warning" IsOpen="False" Title="Hinweis" />
    </Grid>
</ui:FluentWindow>
