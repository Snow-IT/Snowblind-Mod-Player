<ui:FluentWindow x:Class="SnowblindModPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pages="clr-namespace:SnowblindModPlayer.Pages"
        mc:Ignorable="d"
        Title="Snowblind-Mod Player" Height="700" Width="1050"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <ui:NavigationView x:Name="Nav" PaneDisplayMode="Left" IsPaneOpen="True" OpenPaneLength="220"
                           Loaded="Nav_Loaded">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Videos" Icon="{ui:SymbolIcon Video24}" TargetPageType="{x:Type pages:VideosPage}" />
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Settings" Icon="{ui:SymbolIcon Settings24}" TargetPageType="{x:Type pages:SettingsPage}" />
            </ui:NavigationView.FooterMenuItems>

        </ui:NavigationView>

        <!-- Hint banner overlay -->
        <ui:InfoBar x:Name="HintBar" VerticalAlignment="Top" Margin="16" 
                   Severity="Warning" IsOpen="False" Title="Hinweis" />
    </Grid>
</ui:FluentWindow>
