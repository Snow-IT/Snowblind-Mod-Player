<ui:FluentWindow x:Class="SnowblindModPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pages="clr-namespace:SnowblindModPlayer.Pages"
        mc:Ignorable="d"
        Title="Snowblind-Mod Player" Height="740" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- TitleBar -->
            <RowDefinition Height="Auto"/>
            <!-- Ribbon -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <ui:TitleBar x:Name="AppTitleBar" Grid.Row="0" Title="Snowblind-Mod Player"
                     ShowMinimize="True" ShowMaximize="True" ShowClose="True" ShowHelp="False" />

        <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundChromeLowBrush}" Padding="8,6" BorderThickness="0,0,0,1" BorderBrush="#1A000000">
            <DockPanel LastChildFill="False">
                <!-- PageButtonsHost: dynamisch gefüllt -->
                <StackPanel x:Name="PageButtonsHost" Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" />

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="ViewLabelTop" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8" Text="Ansicht"/>
                    <ComboBox x:Name="ViewModeComboTop" Width="160">
                        <ComboBoxItem Content="Liste" />
                        <ComboBoxItem Content="Miniaturen" IsSelected="True" />
                    </ComboBox>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- NavigationView: standardmäßig eingeklappt -->
        <ui:NavigationView x:Name="Nav" Grid.Row="2" PaneDisplayMode="Left" IsPaneOpen="False" OpenPaneLength="220"
                           Loaded="Nav_Loaded" IsBackButtonVisible="Collapsed">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Videos" Icon="{ui:SymbolIcon Video24}" TargetPageType="{x:Type pages:VideosPage}" />
                <ui:NavigationViewItem Content="Logs" Icon="{ui:SymbolIcon Document24}" TargetPageType="{x:Type pages:LogsPage}" />
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Settings" Icon="{ui:SymbolIcon Settings24}" TargetPageType="{x:Type pages:SettingsPage}" />
            </ui:NavigationView.FooterMenuItems>

        </ui:NavigationView>

        <!-- Dialog host für ContentDialog -->
        <ui:ContentDialogHost x:Name="RootDialogHost" Grid.RowSpan="3"/>

        <ui:InfoBar x:Name="HintBar" Grid.RowSpan="3" VerticalAlignment="Top" Margin="16"
                   Severity="Warning" IsOpen="False" Title="Hinweis" />
    </Grid>
</ui:FluentWindow>